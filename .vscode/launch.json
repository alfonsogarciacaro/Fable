{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "${workspaceFolder}/build/tests/tests/Main",
                "--reporter",
                "dot",
                "--timeout",
                "10000"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Fable TCP server",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/Fable.Cli/bin/Debug/netcoreapp2.1/Fable.Cli.dll",
            "args": ["start", "--port", "61225"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },

        {
            "type": "node",
            "name": "fable-splitter",
            "program": "${workspaceFolder}/src/fable-splitter/dist/cli.js",
            "request": "launch",
            "args": ["-c", "tests/splitter.config.js"],
            "cwd": "${workspaceRoot}",
            "stopOnEntry": true
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/src/Fable.Cli/bin/Debug/netcoreapp3.1/Fable.Cli.dll",
            "args": ["start","--port", "61225"],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Node",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Quicktest.js",
            "program": "${workspaceRoot}/src/quicktest/bin/QuickTest.js",
            "args": ["--help"],
            "cwd": "${workspaceRoot}/src/quicktest",
            "sourceMaps": false,
            "stopOnEntry": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Bundler",
            "program": "${workspaceRoot}/node_modules/.bin/rollup", "args": ["-c"],
            // "program": "${workspaceRoot}/node_modules/.bin/webpack",
            "cwd": "${workspaceRoot}/src/tools",
            "stopOnEntry": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "bench-compile (Node)",
            "program": "${workspaceRoot}/src/fable-standalone/test/bench-compiler/out-node/app.js",
            // "args": ["${workspaceRoot}/tests/Main/Fable.Tests.fsproj", "out-tests"],
            "args": ["${workspaceRoot}/../fable-test/fable-test.fsproj", "out-test", "--typescript"],
            "cwd": "${workspaceRoot}/src/fable-standalone/test/bench-compiler"
        },
        {
            "type": "coreclr",
            "request": "launch",
            "name": "bench-compile (.NET)",
            "program": "${workspaceFolder}/src/fable-standalone/test/bench-compiler/bin/Debug/netcoreapp3.1/bench-compiler.dll",
            // "args": ["${workspaceRoot}/tests/Main/Fable.Tests.fsproj", "out-tests"],
            "args": ["${workspaceRoot}/../fable-test/fable-test.fsproj", "out-test"],
            "cwd": "${workspaceFolder}/src/fable-standalone/test/bench-compiler"
        },
        {
            // src/fable-compiler-js/ tests/Main/Fable.Tests.fsproj build/tests-js

            "type": "node",
            "request": "launch",
            "name": "transform tests to JS",
            "program": "${workspaceRoot}/build/fable-compiler-js/src/fable-compiler-js/dist/app.js",
            "args": ["${workspaceRoot}/tests/Main/Fable.Tests.fsproj", "build/tests-js"],
            "stopOnEntry": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run test (Node)",
            "program": "${workspaceFolder}/src/fable-standalone/test/bench-compiler/out-test/src/test.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--colors",
                "-r", "esm",
                // "${workspaceFolder}/src/fable-standalone/test/bench-compiler/out-tests"
                "${workspaceFolder}/tests/Main"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Run Tests (.NET)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/tests/Main/bin/Debug/netcoreapp2.0/Fable.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tests/Main",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
    ]
}
